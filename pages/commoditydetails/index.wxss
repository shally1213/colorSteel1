swiper ,swiper image{
  width: 100vw;
  height: 600rpx;
}
.choose{
  border:1px solid rgb(228, 126, 126);
  width: 120px;
  height:50rpx;
  border-radius:5rpx;
  font-size: 30rpx;
  text-align:center;
  margin: 5px 10px 5px 10px;
  float: left;
}

.price{
  color: red;
  font-size: 26px;
}

.Specifications{
  height: 100px;
}

.reduceDis{
  text-align: center;
}

span{
  font-size: 18px;
  color: rgb(228, 126, 126);
  float: left;
  width: 25px;
  height: 25px;
  border: 1px solid rgb(228, 126, 126);
  cursor: pointer;
  text-align: center;
}

input{
  width: 60px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  float: left;
  height: 27px;
  margin: 0 -1px;
  text-align: center;
  border-radius: 0;
  background-color: white;
  border: 1px solid rgb(228, 126, 126);
  vertical-align: middle;
}

.payNum{
  height: 60px;
}

.shopping{
  color: red;
}

.addCart{
